<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/start_listen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start listening threads" />

    <Button
        android:id="@+id/channel_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send channel 0" />

    <Button
        android:id="@+id/channel_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send channel 1" />

    <Button
        android:id="@+id/algo_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="channel algo send"/>

</LinearLayout>